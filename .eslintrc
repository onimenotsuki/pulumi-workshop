{
    "root": true,
    "env": {
        "node": true,
        "jest": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["@typescript-eslint", "plugin:@typescript-eslint/recommended"],
    "extends": ["eslint:recommended"],
    "rules": {
        "no-await-in-loop": "error",
        "eqeqeq": "error",
        "no-tabs": "error",
        "no-whitespace-before-property": "error",
        "prefer-const": "error",
        "one-var": ["error", "never"],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "no-console": "error",
        "no-unused-vars": "error",
        "accessor-pairs": "error",
        "curly": "error",
        "no-var": "error",
        "camelcase": "warn",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "array-callback-return": [
            "error",
            {
                "checkForEach": true
            }
        ],
        "no-else-return": "error",
        "no-useless-rename": "error",
        "no-useless-return": "error",
        "no-useless-concat": "error",
        "no-useless-computed-key": "error",
        "sort-imports": "error",
        "spaced-comment": ["warn", "always"],
        "eol-last": ["error", "always"],
        "no-multi-spaces": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1,
                "maxBOF": 0
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "no-trailing-spaces": "error",
        "dot-notation": "error",
        "dot-location": ["error", "property"],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": ["const", "let", "var"],
                "next": "*"
            },
            {
                "blankLine": "any",
                "prev": ["const", "let", "var"],
                "next": ["const", "let", "var"]
            },
            {
                "blankLine": "always",
                "prev": "directive",
                "next": "*"
            },
            {
                "blankLine": "any",
                "prev": "directive",
                "next": "directive"
            }
        ]
    },
    "reportUnusedDisableDirectives": true
}
